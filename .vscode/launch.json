{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "name": "Run/Debug all Jest tests",
      "protocol": "inspector",
      "port": 9229,
      "args": ["run", "test"],
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
    }
  ]
}
