{
	"target": "ES2015",
	"module": "commonjs",
	"strict": true,
	"esModuleInterop": true,
	"skipLibCheck": true,
	"forceConsistentCasingInFileNames": true,
	"typeAcquisition": {
		"include": [
			"jest"
		]
	},
	"compilerOptions": {
		"outDir": "dist",
		"allowJs": true,
		"declaration": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.test.ts"
	]
}